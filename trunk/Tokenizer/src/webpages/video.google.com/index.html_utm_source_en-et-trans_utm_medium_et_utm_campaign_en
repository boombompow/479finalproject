function init() {
    if (navigator.userAgent.match(/Windows NT (5\.0|5\.01)+/)) {
      var content = document.getElementById('main');
      var warning = document.getElementById('win2k');
      gweb.dom.insertSiblingBefore(warning,content);
      gweb.dom.classes.remove(warning,'hidden');
    } else if (!gweb.userAgent.product.IE) {
      var content = document.getElementById('main');
      var warning = document.getElementById('incompat');
      gweb.dom.insertSiblingBefore(warning,content);
      gweb.dom.classes.remove(warning,'hidden');
    }
    var std = document.getElementById('standard');

    var gplus = document.getElementById('gplus');
    var ie9 = document.getElementById('ie9');

    var ie = navigator.userAgent.match(/MSIE (\d)\.0/);


    if (ie) {
      gweb.dom.classes.add(std,'hidden');
      switch(ie[1]) {
      
        case '9':
          gweb.dom.classes.remove(ie9,'hidden');
          break;
        case '8':
          gweb.dom.classes.remove(gplus,'hidden');
          break;
      
        default:
          gweb.dom.classes.remove(std,'hidden');
      }
    }

    }

    function getBrand() {
    var brand = '';
    if (match = String(window.location).match(/[&#?](tb)?brand=([A-Z]{4})/)) {
      brand = match[2];
    }

    var ie = navigator.userAgent.match(/MSIE (\d+)\.0/);
    if (ie && ie[1] == '9') {
      switch(brand) {
      case 'GZAB':
        brand = 'GZBN';
        break;
      case 'GZAG':
        brand = 'GZGN';
        break;
      default:
        brand = 'GGNI';
      }
    }
    if (!brand) {
      brand = 'GGHP';
    }
    return brand;
    }

    function addParams(link) {
    var hash = window.location.hash;
    var params = hash.replace(/[&#?](tb)?brand=([A-Z]{4})/i,'');
    var params = params.substr(1);
    if (link.href.match('tools.google.com')) {
      if (navigator.userAgent.match(/(Win64|WOW64)/)) {
        link.href = 'install.html#tbbrand=' + getBrand() + '&' + params;
      } else {
        link.href += '&brand=' + getBrand() + '&' + params;
      }
    } else {
      link.href += '#brand=' + getBrand() + '&' + params;
    }
    return true;
    }

    document.onload = init();
    new gweb.ui.Switcher({'switcherSelector': '#hl select'});
    </script><script>
