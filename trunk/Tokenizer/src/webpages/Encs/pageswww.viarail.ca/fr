function searchGoogle()
{
	if((document.getElementById('search_field').value == '') || (document.getElementById('search_field').value == 'Recherche') || (document.getElementById('search_field').value == 'Search'))
	{
		return false;
	}
	else
	{
		return true;
	}
}

